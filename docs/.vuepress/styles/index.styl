@font-face {
    font-family: 'Rubik';
    font-weight: 400;
    font-style: normal;
    font-display: swap;
    src: url('/fonts/Rubik-Regular.woff2') format('woff2');
}

@font-face {
    font-family: 'Rubik';
    font-weight: 500;
    font-style: normal;
    font-display: swap;
    src: url('/fonts/Rubik-Medium.woff2') format('woff2');
}

@font-face {
    font-family: 'Rubik';
    font-weight: 700;
    font-style: normal;
    font-display: swap;
    src: url('/fonts/Rubik-Bold.woff2') format('woff2');
}

body {
    font-family: 'Rubik', sans-serif;
}

.navbar,
.navbar .links {
    background-color: #333 !important;
    a,
    a:hover,
    .router-link-active {
        color: #ddd;
    }
}

.sidebar-button {
    color: #ddd;
}

.site-name {
    color: #ddd !important;
    font-size: 1.5rem !important;
    line-height: 0 !important;    
}

.page {
    padding-bottom: 0 !important;
    display: flex !important;
    flex-direction: column;
    min-height: 100vh;    
}

.page-edit,
.page-nav {
    width: 100%;    
}

.footer {
    display: flex;
    text-align: right;
    margin-top: auto;
    border-top: 1px solid #eaecef;
    padding: 1rem;
    color: #666;
    font-size: 0.9rem;
}

.copyright {
    margin-right: auto;
}